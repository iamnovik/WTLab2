<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>SevereShop</display-name>
  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>SevereShop.Web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>SevereShop.Model.Exceptions.ProductNotFoundException</exception-type>
    <location>/WEB-INF/pages/errorProductNotFound.jsp</location>
  </error-page>
  <filter>
    <filter-name>localeFilter</filter-name>
    <filter-class>SevereShop.Web.Filters.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>localeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>authoriseFilter</filter-name>
    <filter-class>SevereShop.Web.Filters.AuthoriseFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authoriseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>adminFilter</filter-name>
    <filter-class>SevereShop.Web.Filters.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>banFilter</filter-name>
    <filter-class>SevereShop.Web.Filters.BanFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>banFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <exception-type>SevereShop.Model.Exceptions.OrderNotFoundException</exception-type>
    <location>/WEB-INF/pages/errorOrderNotFound.jsp</location>
  </error-page>
</web-app>